<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="swevoq.ebread.com.Chat.View.Settings.TextSettingsActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="10pt"
            android:paddingLeft="5pt"
            android:paddingRight="5pt"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/firstSeparator"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10pt"
                android:paddingBottom="10pt"
                android:text="Colore testo messaggio"
                android:gravity="center_horizontal"
                android:textColor="@color/black"
                android:textStyle="bold"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Seleziona colore:"
                    android:gravity="center_horizontal"
                    android:textColor="@color/black"
                    android:padding="5pt"/>
                <Spinner
                    android:id="@+id/textColorSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10pt"
                    android:textAlignment="center"/>
            </LinearLayout>
            <TextView
                android:id="@+id/secondSeparator"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10pt"
                android:paddingBottom="10pt"
                android:text="Colore bolla messaggio"
                android:gravity="center_horizontal"
                android:textColor="@color/black"
                android:textStyle="bold"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Seleziona colore:"
                    android:gravity="center_horizontal"
                    android:textColor="@color/black"
                    android:padding="5pt"/>
                <Spinner
                    android:id="@+id/bubbleColorSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10pt"
                    android:textAlignment="center"/>
            </LinearLayout>
            <TextView
                android:id="@+id/thirdSeparator"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10pt"
                android:paddingBottom="10pt"
                android:text="Colore di evidenziazione"
                android:gravity="center_horizontal"
                android:textColor="@color/black"
                android:textStyle="bold"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Seleziona colore:"
                    android:gravity="center_horizontal"
                    android:textColor="@color/black"
                    android:padding="5pt"/>
                <Spinner
                    android:id="@+id/highlightColorSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10pt"
                    android:textAlignment="center"/>
            </LinearLayout>
            <TextView
                android:id="@+id/fourthSeparator"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10pt"
                android:paddingBottom="10pt"
                android:text="Font"
                android:gravity="center_horizontal"
                android:textColor="@color/black"
                android:textStyle="bold"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Seleziona font :"
                    android:gravity="center_horizontal"
                    android:textColor="@color/black"
                    android:padding="5pt"/>
                <Spinner
                    android:id="@+id/textFontSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10pt"
                    android:textAlignment="center"/>
            </LinearLayout>
            <TextView
                android:id="@+id/sixthSeparator"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10pt"
                android:paddingBottom="10pt"
                android:text="Dimensione caratteri"
                android:gravity="center_horizontal"
                android:textColor="@color/black"
                android:textStyle="bold"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Seleziona dimensione:"
                    android:gravity="center_horizontal"
                    android:textColor="@color/black"
                    android:padding="5pt"/>
                <Spinner
                    android:id="@+id/fontSizeSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10pt"
                    android:textAlignment="center"/>
            </LinearLayout>
            <TextView
                android:id="@+id/seventhSeparator"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10pt"
                android:paddingBottom="10pt"
                android:text="Spaziatura caratteri"
                android:gravity="center_horizontal"
                android:textColor="@color/black"
                android:textStyle="bold"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="10pt">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Seleziona spaziatura:"
                    android:gravity="center_horizontal"
                    android:textColor="@color/black"
                    android:padding="5pt"/>
                <Spinner
                    android:id="@+id/fontSpacingSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10pt"
                    android:textAlignment="center"/>
            </LinearLayout>
            <Button
                android:id="@+id/updateTextSettings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorAccent"
                android:padding="10dp"
                android:text="@string/action_update_voice_settings"
                android:textColor="@android:color/black"/>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
